
@model Repules.Models.CityViewModel

@{
    ViewData["Title"] = "City";
}

    <div class="container">

        <div class="card card-cascade narrower mt-5 p-3">

            <div class="form-group col-md-offset-3 col-md-5">

                <h2>@Model.Name időjárása:</h2>

                <label asp-for="Name"></label>
                <span class="badge badge-primary">@Model.Name</span>
                <br />

                <label asp-for="Temp"></label>
                <span class="badge badge-primary">@Model.Temp °C</span>
                <br />

                <label asp-for="Humidity"></label>
                <span class="badge badge-primary">@Model.Humidity %</span>
                <br />

                <label asp-for="Pressure"></label>
                <span class="badge badge-primary">@Model.Pressure Hpa</span>
                <br />

                <label asp-for="Wind"></label>
                <span class="badge badge-primary">@Model.Wind Km/h</span>
                <br />

                <label asp-for="Weather"></label>
                <span class="badge badge-primary">@Model.Weather</span>
                <br />

            </div>

            <div class="form-group col-md-offset-3 col-md-5">

                <form method="get">
                    <button asp-controller="Weather" asp-action="SearchCity" class="btn btn-success">Vissza a keresőhöz</button>
                </form>

            </div>

        </div>

    </div>
