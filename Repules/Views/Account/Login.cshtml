@model LoginViewModel
<center>
    <div class="panel panel-info" style="width: 600px">
        <div class="panel-heading"><h4>Bejelentkezés</h4></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" /> @*rejtett mezőben visszaküldjük, h honnan jött a felhasznalo*@
            <div class="form-group" style="width: 200px">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group" style="width: 200px">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <center>            
                <button class="btn btn-primary" type="submit">Bejelentkezés</button>
            </center>
        </form>
    </div>
</center>
