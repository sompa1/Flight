@model Repules.Models.AirportViewModel

@{
    ViewData["Title"] = "Repülőtér hozzáadás";
}
<div class="container mt-5">
    <form class="text-center border border-light p-5" asp-action="Create">
        <div class="form-row">
            <div class="col-md-6">
                <p class="h4 mb-4">Új repülőtér hozzáadása</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="md-form md-bg form-group mt-5">
                    <i class="fas fa-user prefix"></i>
                    <input asp-for="AirportId" class="form-control">
                    <label asp-for="AirportId"></label>
                    <span asp-validation-for="AirportId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="md-form md-bg form-group mt-5">
                    <i class="fas fa-envelope prefix"></i>
                    <input asp-for="Name" class="form-control">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="md-form md-bg form-group mt-5">
                    <i class="fas fa-lock prefix"></i>
                    <input asp-for="Longitude" class="form-control">
                    <label asp-for="Longitude"></label>
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="md-form md-bg form-group mt-5">
                    <i class="fas fa-lock prefix"></i>
                    <input asp-for="Latitude" class="form-control">
                    <label asp-for="Latitude"></label>
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <button class="btn btn-info btn-block" type="submit">Létrehoz</button>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Vissza a repülőterekhez</a>
</div>
