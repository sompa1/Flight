@model IEnumerable<Repules.Models.AirportViewModel>

@{
    ViewData["Title"] = "Repülőterek";
}
<div class="card card-cascade narrower mt-5">
    <div class="container">
        <div class="px-4">
            <p>
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus fa-lg"></i> Új repülőtér hozzáadása</a>
            </p>
            <div class="table-wrapper">
                <!--Table-->
                <table class="table table-hover table-responsive mb-0">

                    <!--Table head-->
                    <thead>
                        <tr>
                            <th class="th-lg">
                                <a>
                                    @Html.DisplayNameFor(model => model.Name)
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a>
                                    @Html.DisplayNameFor(model => model.WeatherIcon)
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a>
                                    @Html.DisplayNameFor(model => model.Longitude)
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a>
                                    @Html.DisplayNameFor(model => model.Latitude)
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                            </th>
                            <th class="th-lg">
                            </th>
                        </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td align="center" style=" background-color: #d9edf7;">
                                <img src=@($"http://openweathermap.org/img/wn/{item.WeatherIcon}.png") alt="Icon">
                                @Html.DisplayFor(modelItem => item.WeatherIcon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Longitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Latitude)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.AirportId" class="btn btn-indigo btn-sm m-0">Szerkesztés</a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.AirportId" class="btn btn-indigo btn-sm m-0">Törlés</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            </div>
        </div>
    </div>
</div>