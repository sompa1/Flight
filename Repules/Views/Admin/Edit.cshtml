@model Repules.Models.ListApplicationUserViewModel

    <div class="container mt-5 p-3">

        <form class="text-center border border-light p-5" autocomplete="off" asp-action="Edit">
            <input autocomplete="false" name="hidden" type="text" style="display:none;">
            <div class="text-center">
                <p class="h4 mb-4 text-light">Felhasználó adatainak módosítása</p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" style="display:none;">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="md-form md-bg form-group mt-5">
                        <input asp-for="UserName" class="form-control" type="text">
                        <label asp-for="UserName"><i class="fas fa-user"></i> Felhasználó név</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="md-form md-bg form-group mt-5">
                        <input asp-for="Email" class="form-control" type="email">
                        <label asp-for="Email"><i class="fas fa-envelope"></i> E-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mt-2">
                    <button class="btn btn-info btn-block" type="submit">Mentés</button>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mt-2">
                    <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-circle-left fa-lg"></i> Vissza a felhasználókhoz</a>
                </div>
            </div>
        </form>
    </div>
